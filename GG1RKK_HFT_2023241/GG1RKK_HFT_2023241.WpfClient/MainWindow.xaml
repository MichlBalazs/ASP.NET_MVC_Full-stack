<Window x:Class="GG1RKK_HFT_2023241.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GG1RKK_HFT_2023241.WpfClient"
        mc:Ignorable="d"
        Title="FantasyShop Orders" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModell/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" ItemsSource="{Binding Orders}" SelectedItem="{Binding SelectedOrder}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="ID:"/>
                                <Label Content="{Binding OrderId}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Adventurer:"/>
                                <Label Content="{Binding Adventurer.AdventurerName}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Item:"/>
                                <Label Content="{Binding Item.ItemName}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="1">
            <Button x:Name="btnCreate" Content="Create new order" Margin="10" FontSize="15" Command="{Binding CreateOrderCommand}"/>
            <Button x:Name="btnDelete" Content="Delete order" Margin="10" FontSize="15" Command="{Binding DeleteOrderCommand}"/>
            <Button x:Name="btnUpdate" Content="Update order" Margin="10" FontSize="15" Command="{Binding UpdateOrderCommand}"/>
        </StackPanel>
    </Grid>
</Window>
